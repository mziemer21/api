<%- model_class = Deal -%>
<div class="page-header">
  <h1><%=t '.title', :default => Deal %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @deal.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @deal.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:restrictions) %></dt>
      <dd><pre class="prettyprint"><%= @deal.restrictions %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time_start) %></dt>
      <dd><pre class="prettyprint"><%= @deal.time_start %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time_end) %></dt>
      <dd><pre class="prettyprint"><%= @deal.time_end %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:up_votes) %></dt>
      <dd><pre class="prettyprint"><%= @deal.up_votes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:down_votes) %></dt>
      <dd><pre class="prettyprint"><%= @deal.down_votes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:day) %></dt>
      <dd><pre class="prettyprint"><%= @deal.day %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_date) %></dt>
      <dd><pre class="prettyprint"><%= @deal.start_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:end_date) %></dt>
      <dd><pre class="prettyprint"><%= @deal.end_date %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              deals_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_deal_path(@deal), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              deal_path(@deal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

