<%- model_class = Establishment -%>
<div class="page-header">
  <h1><%=t '.title', :default => Establishment %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rating) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.rating %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.zip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:neighborhoods) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.neighborhoods %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hours) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.hours %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bar) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.bar %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:facebook) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.facebook %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:menu) %></dt>
      <dd><pre class="prettyprint"><%= @establishment.menu %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              establishments_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_establishment_path(@establishment), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              establishment_path(@establishment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

